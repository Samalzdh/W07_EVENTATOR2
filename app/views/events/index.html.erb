<p style="color: green"><%= notice %></p>

<h1>Events</h1>

<div class="container">
  <div class="row">
    <% Event.all.each do |event|%>
      <div class="col-sm-3 my-2">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">A <%= event.location %></h6>
            <p class="card-text"><%= event.description %></p>
            <%= link_to "Plus d'infos", event_path(event), :class=>"btn btn-outline-light" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "New event", new_event_path %>
